  password: {{ product.db.password }}

test:
  adapter: jdbc-postgresql
  encoding: utf8
  database: {{ product.db.test_name }}
  username: root
  password: {{ product.db.password }}

production:
  adapter: jdbc-postgresql
  encoding: utf8
