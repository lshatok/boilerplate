---
- name: Create groups
  group: name="{{ item }}" state=present
  ignore_errors: true
  with_items:
    - wtgroup
    - admin
  register: rc

# install user accounts from list
- name: Add accounts
  become: true
  user:   name="{{ item.user }}"
          comment="{{ item.comment | default(omit) }}"
          shell="{{ item.shell | default('/bin/bash') }}"
          home="{{ item.home }}" createhome=yes
          append="{{ item.append | default('no') }}"
  with_flattened:
    - wtuser:
      comment: wtuser
      user: wtuser
      append: no
      home: /WT
  become:    yes
  register: rc

# deploy root ssh keys
- name: Deploy root ssh keys
  authorized_key: user="{{ item.user }}"
                  key="{{ item.pubkey }}"
                  path="{{ item.home }}/.ssh/id_rsa.pub"
                  manage_dir="yes"
  with_flattened:
   - root:
     user:  root
     home:  /root
     append: no
     pubkey: ssh-rsa  {{ product.admin }}@webtelemetry.us
  become:   yes
  register: rc

# deploy user authorized_keys
- name: Deploy authorized_keys
  authorized_key: user="{{ item.user }}"
                  key="{{ item.pubkey }}"
                  path="{{ item.home }}/.ssh/authorized_keys"
                  manage_dir=yes
  with_flattened:
    - {{ product.admin }}:
      user:  {{ product.admin }}
      home:  /home/{{ product.admin }}
      append: no
      pubkey: ssh-rsa  {{ product.admin }}@webtelemetry.us

    - root:
      user:  root
      home:  /root
      append: no
      pubkey: ssh-rsa  {{ product.admin }}@webtelemetry.us
  become:   yes
  register: rc


- name: Deploy user's bash_profile
  copy: src=bash_profile dest=/root/.bash_profile  owner=root  group=root   mode=0740
  become: yes
  register: rc


