#
# This file describes the database connection.
#

# The database type
# Currently 'postgresql', 'postgresql' and 'oracle' are valid databases.
com.cloudera.cmf.db.type=postgresql

# The database host
# If a non standard port is needed, use 'hostname:port'
com.cloudera.cmf.db.host={{ cdh_db_host }}:{{ cdh_db_port }}

# The database name
com.cloudera.cmf.db.name={{ cdh_db_name }}

# The database user
com.cloudera.cmf.db.user={{ cdh_db_user }}

# The database user's password
com.cloudera.cmf.db.password={{ cdh_db_pass }}
